# Use official golang image as base
FROM golang:1.20-alpine

# Set working directory
WORKDIR /app

# Copy go mod and sum files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN go build -o main .

# Expose port 50051 for gRPC
EXPOSE 50051

# Run the server
CMD ["./main"]
